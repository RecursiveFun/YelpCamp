<% layout('layouts/boilerplate'); %>
<div id="map" style="width: 100%; height:300px"></div>
<h1>All Camps</h1>
<div><a href="/camps/new">New Camp</a></div>
<ul>
    <% for (let camp of camps) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt ="" src="<%= camp.images[0].url%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> <%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %></small>
                        </p>
                        <a href="/camps/<%= camp._id %>" class="btn btn-primary">View <%=camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>
</ul>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const camps = {features: <%- JSON.stringify(camps) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>