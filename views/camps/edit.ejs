<% layout('layouts/boilerplate'); %>
    <form action="/camps/<%=camp._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="camp[title]" value="<%= camp.title %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="camp[location]" value="<%= camp.location %>">
        </div>
        <button>Edit Campground</button>
    </form>
    <div><a href="/camps/<%= camp._id%>">Back to Camp</a></div>